@model Web.Models.DataAccessPostgreSqlProvider.DBStar

@{
    ViewBag.Title = "Add star";
    Layout = "_Layout";
}

<h2>Add star</h2>
<style>
    .mystyle {
        font-size: 20px;
        font-family: "Times new roman";
        font-style: initial;
    }
    input {
        font-size: 20px;
        font-family: "Times new roman";
        font-style: initial;
        color: black;
    }
</style>
<form asp-action ="AddStar" asp-controller="Home" method="post" class="mystyle" enctype="multipart/form-data">
