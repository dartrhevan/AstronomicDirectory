    <input type="file" name="Photo"/>
    <hr />
    Name: <input name ="Name" type="text"/>
    <br />
    Galaxy: <input name ="Galaxy" type="text"/>
    <br />
    Radius: <input name="Radius" type="number" />
    <br />
    Temperature: <input name="Temperature" type="number" />
    <br />
    Inventing Date: <input name="Date" type="date" />
    <br />
    Middle Distance: <input name="Dist" type="number" /> <select name="Unit">
    <option>Kilometers</option>
    <option>LightYears</option>
