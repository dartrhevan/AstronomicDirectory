@using Web.Controllers
@model AstronomicDirectory.Star

@{
    ViewBag.Title = "Star";
    Layout = "_Layout";
}

<h2 align="center">@Model.Name</h2>
<style>
    .mystyle {
        font-size: 20px;
        font-family: "Times new roman";
        font-style: initial;
        align-content: left;
    }
</style>
<div class="mystyle">
    <img class="img-thumbnail" width="150" height="150"
         src="@Url.Action("GetImage", "Home", Model.Photo)"/>
    Photo
    <hr/>
    <br/>
    Galaxy: @Model.Galaxy
    <br/>
    Radius: @Model.Radius
    <br/>
    Temperature: @Model.Temperature
    <br/>
    Inventing Date: @Model.InventingDate
    <br/>
    Middle Distance: @Model.MiddleDistance
    <br/>
    Planets:
    <table class="table table-bordered table-striped">
        @foreach (var planet in Model.Planets)
        {
            <a asp-controller="Home" asp-action="PlanetView">@planet.Name</a>
            <br />
            <a href="@Url.Action("PlanetView", "Home", planet)">@planet.Name</a>
            <br />
            @*@Html.BeginForm("PlanetView", "Home", FormMethod.Post, )*@
            <br />

        }
    </table>
</div>