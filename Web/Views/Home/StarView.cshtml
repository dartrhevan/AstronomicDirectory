@using Web.Controllers
@model Web.Models.DataAccessPostgreSqlProvider.DBStar

@{
    ViewBag.Title = "Просмотр звезды";
    Layout = "_Layout";
}

<h2 align="center">Просмотр звезды</h2>
<h2 align="center">@Model.Name</h2>
<style>
    .mystyle {
        font-size: 20px;
        font-family: "Times new roman";
        font-style: initial;
    }
</style>
<div class="mystyle">
    <img class="thumbnail" width="1000" height="600" src="GetImage?id=@Model.Id" />
    Фото
    <hr />
    <br />
    Галактика: @Model.Galaxy
    <br />
    Радиус: @Model.Radius
    <br />
    Температура: @Model.Temperature
    <br />
    Дата открытия: @Model.InventingDate
    <br />
    Среднее расстояние: @Model.MiddleDistanceValue @Model.MiddleDistanceUnit
    <br />
    Планеты:
    <ol>
        @foreach (var planet in Model.Planets)
        {
            <li>
                <a href="PlanetView?starId=@Model.Id&planetId=@planet.Id">@planet.Name;</a>
            </li>
        }

    </ol>
</div>