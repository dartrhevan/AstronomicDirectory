@model Web.Models.DataAccessMySqlProvider.DBPlanet

@{
    ViewBag.Title = "Просмотр планеты";
    Layout = "_Layout";
}

<h2 align="center">Просмотр планеты</h2>
<h2 align="center">@Model.Name</h2>
