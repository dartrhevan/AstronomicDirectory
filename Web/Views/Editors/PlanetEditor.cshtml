    }
</script>
<form asp-action="AddPlanet" class="form-group" asp-fragment="" asp-controller="Editors" method="post" class="mystyle" enctype="multipart/form-data">

    @*<input type="hidden" @*value="@Model.Id" * name="StId" />*@
    Фото
    <input type="file" class="btn btn-default btn-block" style="background-color: black; color: whitesmoke;" name="Photo" />
    <hr />
    Имя: <input name="Name" type="text" value="@Model.Item1" id ="n" readonly="readonly" />
    <br />
    Галактика: <input name="Galaxy" type="text" value="@Model.Item3" id = "g" readonly="readonly" />
    <br />
    Радиус: <input name="Radius" type="number" @*value="@Model.Radius" *@ />
    <br />
    Температура: <input name="Temperature" type="number" @*value="@Model.Temperature" *@ />
    <br />
    Дата открытия: <input name="Date" type="date" @*value="@Model.InventingDate" *@ />
    <br />
    Звезда, вокрун которой вращается: <input name="Name" type="text" value="@Model.Item2" readonly="readonly" />
    <br />
    Среднее расстояние: <input name="Dist" type="number" @*value="@Model.MiddleDistanceValue" *@ /> <select name="Unit">
        <option>Kilometers</option>
        <option>LightYears</option>
        <option>AstronomicUnits</option>
    </select>
    <br />
    Имеет атмосферу: <input type="checkbox" name="atm" />
    <br />
    Имеет твёрдую поверхность: <input type="checkbox" name="type" />
    <br />
    Спутники:
    <details>
        <ol id="d" class="list-group">
            <li class="list-group-item list-group-item-info">
                <input id="newPlanetName" />
                <label id="err"></label>
                <a class="btn btn-primary" onclick="onpladd('MoonEditor')">Добавить</a>
            </li>
        </ol>
    </details>
    <input type="submit"/>
</form>