@using Web.Models.DataAccessMySqlProvider
@model Tuple<string, string, string>

@{
    ViewBag.Title = "Добавление планеты";
    Layout = "_Layout";
}


@*@System.Web.Optimization.Scripts.Render("~/scripts/validate.min.js")*@

<h2>Add Planet</h2>

<style>
    .mystyle {
        font-size: 20px;
        font-family: "Times new roman";
        font-style: initial;
    }
    input {
        font-size: 20px;
        font-family: "Times new roman";
        font-style: initial;
        color: black;
    }
    select {
        font-size: 20px;
        font-family: "Times new roman";
        font-style: initial;
        color: black;
    }

</style>

<script src="js/site.js">
</script>

<script>
