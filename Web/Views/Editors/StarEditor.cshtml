@model Web.Models.DataAccessMySqlProvider.DBStar

@{
    ViewBag.Title = "Add star";
    Layout = "_Layout";
}

<h2>Add star</h2>
<style>
    .mystyle {
        font-size: 20px;
        font-family: "Times new roman";
        font-style: initial;
    }
    input {
        font-size: 20px;
        font-family: "Times new roman";
        font-style: initial;
        color: black;
    }
    select {
        font-size: 20px;
        font-family: "Times new roman";
        font-style: initial;
        color: black;
    }

</style>
<script>
    function onpladd() {
        var d = document.getElementById('d');
        var inp = document.getElementById('newPlanetName');
        var a = document.getElementById('ref');
        //d.innerHTML = d.innerHTML.concat('<br />' + inp.value);
        d.innerHTML = inp.value + '<br />' + d.innerHTML;
        a.href = "PlanetEditor?name=" + inp.value;
    }
</script>
<form asp-action ="AddStar" asp-controller="Editors" method="post" class="mystyle" enctype="multipart/form-data">
    Photo
    <input type="file" name="Photo"/>
    <hr />
    Name: <input name ="Name" type="text" value="@Model.Name"/>
    <br />
    Galaxy: <input name ="Galaxy" type="text" value="@Model.Galaxy"/>
    <br />
    Radius: <input name="Radius" type="number" value="@Model.Radius"/>
    <br />
    Temperature: <input name="Temperature" type="number" value="@Model.Temperature" />
    <br />
    Inventing Date: <input name="Date" type="date" value="@Model.InventingDate"/>
    <br />
    Middle Distance: <input name="Dist" type="number" value="@Model.MiddleDistanceValue" /> <select name="Unit">
    <option>Kilometers</option>
    <option>LightYears</option>
    <option>AstronomicUnits</option>
</select>
    <br />
    Planets:
    <details>
        <ol id ="d">
            @foreach (var planet in Model.Planets)
            {
                <li>
                    <a href="PlanetView?starId=@Model.Id&planetId=@planet.Id">@planet.Name;</a>
                </li>
            }
            <input id="newPlanetName"/>
            <a class="btn btn-primary" href="PlanetEditor" onclick="onpladd()" id ="ref" target="_blank">Add</a>
        </ol>
    </details>
    <input type="submit"/>
</form>